{% extends 'base.jinja2' %}

{% block content %}
    <form method="POST" id='add-book'>
    <h2>Add new book</h2>
    <hr>
        <div class='add-book-inputs'>
            <div class='add-book-row'>
                <label for="title">Title</label>
                <input type="text" name="title" class="add-book-input"/>
            </div>
            <div class='add-book-row'>
                <label for="author">Author</label>
                <input type="text" name="author" class="add-book-input"/>
            </div>
        </div>
        <button type="submit" class='button-big'>Add</button>
    </form>
{% endblock %}